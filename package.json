{
  "name": "independent-reserve",
  "version": "0.0.1",
  "description": "Strongly typed node wrapper for Independent Reserve",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -d",
    "test": "mocha \"src/**/*.ts\" --require ts-node/register --require source-map-support/register --full-trace --bail",
    "coverage": "nyc npm test",
    "coverage-ci": "npm run coverage | coveralls",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sketchthat/independentreserve.git"
  },
  "keywords": [
    "independentreserve",
    "exchange",
    "api",
    "bitcoin",
    "ethereum",
    "litecoin"
  ],
  "author": "Michael Kimpton",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/sketchthat/independentreserve/issues"
  },
  "homepage": "https://github.com/sketchthat/independentreserve#readme",
  "dependencies": {
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.6.6",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "mocha": "^5.0.0",
    "nyc": "^11.7.1",
    "sinon": "^4.5.0",
    "source-map-support": "^0.5.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.8.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/interfaces/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-lcov",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true
  }
}
